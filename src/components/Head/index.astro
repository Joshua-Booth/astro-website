---
// Components
import HotJar from "../hotjar.astro";

// // Constants
import { APP_NAME } from "../../constants/app.js";

const { title } = Astro.props;
---
<head>
  <meta charset="utf-8" />
  <meta name="apple-mobile-web-app-capable" content="yes">

  <title>{title}</title>

  <meta name="theme-color" content="#ffffff" />
  <meta name="application-name" content={APP_NAME}>
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-status-bar-style" content="white">
  <meta name="mobile-web-app-title" content={APP_NAME}>
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, maximum-scale=1"
  />

  <!-- 
  <meta
    name="description"
    content="{{ with .Description }}{{ . }}{{ else }}{{ with .Site.Params.description }}{{ . }}{{ end }}{{ end }}"
  />

  {{ with .Site.Params.author }}
  <meta name="author" content="{{ . }}">
  {{ end }}
  -->

  <!-- Open Graph Metadata -->
  <!-- {{ template "_internal/opengraph.html" . }} -->

  <!-- Preconnect/preload styles and fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preload" as="style" href="https://fonts.googleapis.com/css?family=Muli:300,400,600,700&display=swap">
  <link rel="preload" href="/fonts/themify.woff" as="font" type="font/woff2" crossorigin>

  <!-- Main stylesheet -->
  <link rel="stylesheet" href={Astro.resolve('../../styles/global.css')}>

  <!-- Icons -->
  <link rel="icon" type="image/svg+xml" href="/assets/icons/favicon.ico">
  <link rel="shortcut icon" href="/assets/icons/favicon.ico" />

  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/assets/icons/apple-touch-icon.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/assets/icons/favicon-32x32.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/assets/icons/favicon-16x16.png"
  />
  <link rel="manifest" href="/site.webmanifest" />
  <link
    rel="mask-icon"
    href="/assets/icons/safari-pinned-tab.svg"
    color="#000000"
  />
  <meta name="msapplication-TileColor" content="#ffffff" />
  <meta
    name="msapplication-config"
    content="/browserconfig.xml"
  />

  <HotJar />
</head>
